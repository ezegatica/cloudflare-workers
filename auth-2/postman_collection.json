  "item": [
    {
      "name": "Login Page",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/login?app=app-1",
          "host": ["{{base_url}}"],
          "path": ["login"],
          "query": [{ "key": "app", "value": "app-1" }]
        }
      },
      "response": []
    },
    {
      "name": "Login",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/x-www-form-urlencoded" }
        ],
        "body": {
          "mode": "urlencoded",
          "urlencoded": [
            { "key": "email", "value": "user@example.com" },
            { "key": "password", "value": "yourPassword" },
            { "key": "app", "value": "app-1" }
          ]
        },
        "url": { "raw": "{{base_url}}/login", "host": ["{{base_url}}"], "path": ["login"] }
      },
      "response": []
    },
    {
      "name": "Refresh Token",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"refresh_token\": \"{{refresh_token}}\"\n}"
        },
        "url": { "raw": "{{base_url}}/refresh", "host": ["{{base_url}}"], "path": ["refresh"] }
      },
      "response": []
    },
    {
      "name": "Revoke Token",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"refresh_token\": \"{{refresh_token}}\"\n}"
        },
        "url": { "raw": "{{base_url}}/revoke", "host": ["{{base_url}}"], "path": ["revoke"] }
      },
      "response": []
    },
    {
      "name": "Google OAuth Start",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/auth/google?app=app-1",
          "host": ["{{base_url}}"],
          "path": ["auth","google"],
          "query": [{ "key": "app", "value": "app-1" }]
        }
      },
      "response": []
    },
    {
      "name": "Google OAuth Callback",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/auth/google/callback?code={{code}}&state={{state}}",
          "host": ["{{base_url}}"],
          "path": ["auth","google","callback"],
          "query": [
            { "key": "code", "value": "{{code}}" },
            { "key": "state", "value": "{{state}}" }
          ]
        }
      },
      "response": []
    }
